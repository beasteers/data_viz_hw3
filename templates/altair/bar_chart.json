{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.3.0.json",
  "config": {
    "view": {
      "height": 300,
      "width": 400
    }
  },
  "data": {
    "url": "/restaurants/{{ zipcode }}"
  },
  "encoding": {
    "color": {
      "condition": {
        "test": "(highlight._vgsid_==datum._vgsid_)",
        "value": "SteelBlue"
      },
      "value": "LightGrey"
    },
    "x": {
      "axis": {
        "title": "Restaurants"
      },
      "field": "total",
      "type": "quantitative"
    },
    "y": {
      "field": "cuisine",
      "sort": {
        "field": "total",
        "op": "argmax"
      },
      "type": "ordinal"
    }
  },
  "mark": {
    "stroke": "Black",
    "type": "bar"
  },
  "selection": {
    "highlight": {
      "empty": "none",
      "on": "mouseover",
      "type": "single"
    }
  },
  "transform": [
    {
      "filter": "datum._vgsid_<=25"
    }
  ]
}